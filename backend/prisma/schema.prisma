generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  phone String?
  address String?
  city String?
  zip String?
  country String?
  role String @default("user")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  reviews Reviews[]
}

model Product {
  id      Int            @id @default(autoincrement())
  name    String
  slug    String         @unique
  img     String
  card_photo String
  price   Json
  skin_type     String?
  skin_concern  String?
  brand String
  category String
  details ProductDetails?
  reviews Reviews[]
}

model ProductDetails {
  id            Int     @id @default(autoincrement())
  productId     Int     @unique
  Product       Product @relation(fields: [productId], references: [id])
  sizes         Json?
  description   String
  key_ingredient String
  how_to_use    Json?
  benefits      Json?
  photos Json?
}

model Reviews {
  id Int @id @default(autoincrement())
  productId Int
  product Product @relation(fields: [productId], references: [id])
  rating Int
  review String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user_id String
  user User @relation(fields: [user_id], references: [id])
}

